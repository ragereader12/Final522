<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Drone1</th>
      <th>Drone2</th>
      <th>Drone3</th>
      <th>Drone4</th>
      <th>Drone5</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.Drone1 %></td>
        <td><%= product.Drone2 %></td>
        <td><%= product.Drone3 %></td>
        <td><%= product.Drone4 %></td>
        <td><%= product.Drone5 %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

